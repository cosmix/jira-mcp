{
  "name": "jira-mcp",
  "version": "1.0.0",
  "description": "JIRA MCP Server",
  "type": "module",
  "scripts": {
    "build": "vite build && chmod +x build/index.js",
    "build:http": "vite build --config vite.config.http.ts && chmod +x build/http-server.js",
    "build:all": "bun run build && bun run build:http",
    "start": "bun build/index.js",
    "start:http": "bun build/http-server.js",
    "dev": "vite",
    "test": "bun test",
    "test:watch": "bun test --watch"
  },
  "keywords": [
    "mcp",
    "jira",
    "typescript",
    "bun"
  ],
  "author": "Dimosthenis Kaponis",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.0",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "bun-types": "^1.2.19",
    "vite": "^7.0.6",
    "vite-plugin-dts": "^4.5.4"
  }
}
